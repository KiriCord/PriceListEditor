@model PriceListEditor.WebAPI.Models.CreateProductDto

@{
    ViewData["Title"] = "NewProduct";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<h1>Добавление товара</h1>
<hr>
<div class="row">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Название товара:</label>
            <input asp-for="ProductName" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Ариткул:</label>
            <input asp-for="ProductCode" class="form-control"/>
            <input type="hidden" asp-for="IdPriceList" value="@ViewData["IdPriceList"]"/>
            </div>
        <hr/>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary"/>
            <a asp-controller="PriceList" asp-action="All" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>
</body>
</html>