@model PriceListEditor.WebAPI.Models.UpdateProductDto

@{
    ViewData["Title"] = "EditProduct";
}

<!DOCTYPE html>

<html>
<head>
    <title>Редактирование товара</title>
</head>
<body>
<h1>Редактирование товара</h1>
<div class="row">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label>Название товара:</label>
            <input asp-for="ProductName" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Артикул:</label>
            <input type="number" asp-for="ProductCode" class="form-control"/>
            </div>
        <hr/>
        <div class="form-group">
            <input type="submit" value="Редактировать" class="btn btn-primary" />
            <a asp-controller="PriceList" asp-action="All" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>
</body>
</html>